# .aliases

alias ..='cd ..'
alias dt='devtool "$@"'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias la="lsd -A"
alias lg='lazygit'
alias ll="lsd -Al --blocks permission,size,date,name"
alias nv='nvim'
alias nvi='nvim'
alias rga='rg --hidden --no-ignore --no-messages'
alias rgi='rg -i'
alias tree='lsd --tree'
